{
  "$schema": "http://json.schemastore.org/template",
  "author": "Muonroi",
  "classifications": [ "Web", "Solution", "ASP.NET", "Muonroi", "Microservices" ],
  "identity": "Muonroi.Microservices.Solution.CSharp",
  "name": "Muonroi Microservices Solution",
  "shortName": "mr-micro-sln",
  "tags": { "language": "C#", "type": "solution" },
  "preferNameDirectory": true,
  "sourceName": "Muonroi.Microservices",
  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            ".git/**",
            ".github/**",
            "images/**",
            "Properties/**",
            "GlobalUsings.cs",
            "Muonroi.Microservices.csproj",
            "Muonroi.Microservices.Template.nuspec",
            "Muonroi.snk"
          ]
        },
        {
          "condition": "(ui != \"angular\")",
          "exclude": [
            "ui/angular/**"
          ]
        },
        {
          "condition": "(ui != \"react\")",
          "exclude": [
            "ui/react/**"
          ]
        },
        {
          "condition": "(ui != \"mvc\")",
          "exclude": [
            "ui/mvc/**"
          ]
        },
        {
          "condition": "(ui == \"none\")",
          "exclude": [
            "ui/**"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "Muonroi.Microservices.sln"
    }
  ],
  "symbols": {
    "ClassName": {
      "type": "parameter",
      "datatype": "text",
      "shortName": "c",
      "replaces": "Microservices",
      "fileRename": "Microservices",
      "displayName": "Base Name for Classes",
      "description": "name of class: DbContext, Service, etc.",
      "defaultValue": "Microservices"
    },
    "ui": {
      "type": "parameter",
      "datatype": "choice",
      "shortName": "ui",
      "defaultValue": "none",
      "displayName": "Frontend UI Shell",
      "description": "Select frontend shell scaffold: angular, react, mvc, or none",
      "choices": [
        {
          "choice": "none",
          "description": "No frontend shell"
        },
        {
          "choice": "angular",
          "description": "Angular shell with Muonroi UI runtime starter"
        },
        {
          "choice": "react",
          "description": "React shell with Muonroi UI runtime starter"
        },
        {
          "choice": "mvc",
          "description": "ASP.NET Core MVC shell for server-side rendering/BFF"
        }
      ]
    }
  }
}

